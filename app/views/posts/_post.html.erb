<div class="post">
  <div class="upper-post">
    <div class="post-user">
      <!-- 投稿したユーザー名情報を出力する -->
      <%= post.user.name %>

    </div>
    <div class="post-date">
      <!-- 投稿した時刻を出力する -->
      <%= l post.created_at %>


    </div>
  </div>
  <div class="lower-post">
    <div class="post-content">
      <!-- 投稿したメッセージ内容を記述する -->
      <%# <%= link_to '詳細', room_post_path(room.id), method: :get %>
      <%= link_to post.content, '/rooms/:room_id/posts/:id', method: :get %>
      <%# <%= link_to post.content %>
    </div>
  </div>
</div>