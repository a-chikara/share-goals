<div class='post-room-form'>
  <h1>新規シェアルーム</h1>
  <%=form_with model: @room, local: true do |f|%>
    <div class='post-room-form__field'>
      <div class='post-room-form__field--left'>
        <%= f.label :シェアルーム名, class: 'post-room-form__label'%>
      </div>
      <div class='post-room-form__field--right'>
        <%= f.text_field :name, class: 'post__room_name post-room-form__input', placeholder: '投稿ルーム名を入力してください'%>
      </div>
    </div>
    <div class='post-room-form__field'>
    </div>
    <div class='post-room-form__field'>
      <div class='post-room-form__field--left'>
        <label class='post-room-form__label' for='post_room_シェアメンバー'>シェアメンバー</label>
      </div>
      <div class='post-room-form__field--right'>
        <select name="room[user_ids][]">
          <option value="">シェアするユーザーを選択してください</option>
          <% User.where.not(id: current_user.id).each do |user| %>
            <option value=<%= user.id %>><%= user.name %></option>
          <% end %>
        </select>
        <input name="room[user_ids][]" type="hidden" value=<%= current_user.id %>>
      </div>
    </div>
    <div class='post-room-form__field'>
      <div class='post-room-form__field--left'></div>
      <div class='post-room-form__field--right'>
        <%= f.submit class: 'post-room-form__action-btn'%>
      </div>
    </div>
  <% end %>
</div>
